        <div class="ebanking_reg_form_container_child">


            @using (Html.BeginForm("Register", "Home", FormMethod.Post))
            {
            <form method="post">

                @Html.TextBoxFor(x => x.Name, new { @class = "holder_name", placeholder = "Account Holder Name", autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.Name)

                @Html.TextBoxFor(x => x.username, new { @class = "form-control", placeholder = "Username", autocomplete = "off" })

                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email", autocomplete = "off" })

                @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control", name = "dob", placeholder = "Date Of Birth", onfocus = "(this.type='date')", @readonly = "true" } })
                @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })

                @Html.TextBoxFor(x => x.Address, new { @class = "form-control", name = "dbtcard", placeholder = "Address", autocomplete = "off" })

                @Html.TextBoxFor(x => x.Phone, new { @class = "mobile", name = "mobile", placeholder = "Registered Mobile (10 Digit)", autocomplete = "off" })

                @Html.DropDownListFor(model => model.Branch, ViewBag.BranchList as SelectList, "Select Location", new { @class = "form-control" })

                @Html.DropDownListFor(x => x.AccountType, new List<SelectListItem>
                {
                    new SelectListItem{ Text = "Current", Value = "Current" },
                    new SelectListItem{ Text = "Saving", Value = "Saving" },
                }, "Select Category", new { @class = "form-control col-md-5" })

                @Html.PasswordFor(x => x.password, new { @class = "form-control", placeholder = "Password", autocomplete = "off" })

                <input type="submit" type="submit" value="Register" />
            </form>

            }
