@model BankSystem.Models.login
@{
    ViewBag.Title = "Login";
}

@{

    Layout = "";
}

<html>
<head>
    <title>Login Page</title>

    <link rel="stylesheet" type="text/css" href="~/Content/css/customer_login.css" />

</head>
<body>

    <link rel="stylesheet" type="text/css" href="~/Content/css/header.css">
    <div class="header_main">
        <div class="navBar">
            <ul>
                <li><a href="">Home</a></li>
                <li><a href="#aboutus">About Us</a></li>
                <li><a href="#contactus">Contact Us</a></li>


            </ul>
        </div>
        <a href="/">
            <div class="logo-name">
                <div class="logo">
                    <img class="logo_img" src="~/Content/img/chase.jpg">
                </div>

                <div class="name">
                    <h5> Online Banking System</h5>
        </a><br>

    </div>
    </div>


    <div class="dif_banking">
        <div class="retail_banking">
            <a href="#">Retail Banking</a>
        </div>
        <div class="corporate_banking">
            <a href="#"> Corporate Banking</a>
        </div>
        <div class="international_banking">
            <a href="#"> International Banking</a>
        </div>
        <div class="international_banking">
            <a href="#"> Apply Mobile Banking</a>
        </div>

        <div class="bank_servic">
            <a href="#">Services</a>
        </div>
    </div>



    </div>



    <div class="login_container">

        <form method="post">


            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {

                <br>
                <div class="formspace">
                    <p class="formspace2">

                        <div class="form">

                            <label class="login">LOGIN</label>
                            <div class="input_field">

                                <label class="userdetail">Customer Account</label><br>


                                @Html.TextBoxFor(x => x.username, new { @class = "customer_id", autocomplete = "off" })  <br>
                                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })    <br>
                                <label class="userdetail">PIN</label><br>


                                @Html.PasswordFor(x => x.password, new { @class = "password", autocomplete = "off" })    <br>
                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })   <br>

                                <input class="login-btn" type="submit" name="login-btn" value="Log In" /><br>

                                <a href="/" class="help"><label class="label_help">FORGET PASSWORD ?</label></a>
                                <img class="userloginimg" src="~/Content/img/home-logo-hi.png" height="90px" width="90px">
                            </div>
                        </div>
                </div>
      

    }

            @if (ViewBag.attempt != null)
            {
                @ViewBag.attempt
            }



            </form>

            <br>

            <link rel="stylesheet" type="text/css" href="~/Content/css/footer.css">
            <footer>
                <div class="container">
                    <div class="follow_us">
                        <label>Follow Us</label>
                        <ul>
                            <li><a href="https://www.facebook.com/">Facebook</a></li>
                            <li><a href="https://twitter.com/">Twitter</a></li>
                            <li><a href="https://www.instagram.com/">Instagram</a></li>

                        </ul>
                    </div>
                    <div class="contact" id="contactus">
                        <label>Contact Us</label>
                        <ul>
                            <p>1149 Bolman Court,</p>
                            <p>Baylis, Illinois 69690</p>
                            <p>Tel : 217-336-0173</p>
                            <p> Email: contact@obsphp</p>

                        </ul>
                    </div>
                    <div class="links">
                        <label>Important Links</label>
                        <ul>
                            <li><a href="#aboutus" target="_blank">About Us</a></li>
                            <li><a href="">Loan</a></li>
                            <li><a href="">Calculator</a></li>
                        </ul><br>
                    </div>

                    <div class="links">
                        <label>Important Links</label>
                        <ul>
                            <li><a href="#aboutus" target="_blank">Link 1</a></li>
                            <li><a href="">Link 2</a></li>
                            <li><a href="">Link 3</a></li>
                        </ul><br>
                    </div>


                </div>
                <div class="copyright">
                    <span>Copyright &copy; 2018-22 Online Banking System. All rights reserved.</span>
                </div>

                <div class="bestview">
                    <span>Site best viewed at 1024 x 768 resolution in Internet Explorer 10+, Google Chrome 49+, Firefox 45+ and Safari 6+</span>

                </div>

            </footer>
        </body>
</html>


